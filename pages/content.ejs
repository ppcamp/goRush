    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="css/clean-blog.min.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark flex-column fixed-top" id="mainNav">
        <div class="container">
            <a class="slide navbar-brand" href="index.html">goRush</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="slide nav-link" href="index.html">
                            <i class="fas fa-home"></i> Perfil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="slide nav-link" href="index.html">
                            <i class="fas fa-shopping-cart"></i> Loja
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="slide nav-link" href="index.html">
                            <i class="fas fa-question-circle"></i> Ajuda
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="position-relative" style="height:6em"></div>


    <!-- Main Content -->
    <div class="container col-md-6 pb-5">

        <div class="card p-5 shadow p-3 mb-5 bg-white rounded">
            <h4 class="text-center">
                Inserção de novo conteúdo
            </h4>
            <hr>
            <br>
            <form>
                <div class="row form-group pb-1">
                    <label for="titulo">Título</label>
                    <input type="text" class="form-control" id="titulo" placeholder="Campos elétricos">
                </div>
                <div class="row form-group pb-1">
                    <label for="descr">Descrição</label>
                    <input type="text" class="form-control" id="descr" placeholder="Método para cálculo do campo elétrico usando superfície gaussiana.">
                </div>
                <div class="row form-group pb-4">
                    <label for="tags">Tags</label>
                    <input type="text" class="form-control" id="tags" placeholder="Física 3, Eletromagnetismo">
                </div>
                <div class="row form-group pb-0">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input">
                        <label class="custom-control-label" for="customRadioInline1">PDF</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input">
                        <label class="custom-control-label" for="customRadioInline2">Vídeo</label>
                    </div>
                </div>

                <div id="inputVideo">
                    <div class="row form-group pb-4">
                        <label for="url">Url</label>
                        <input type="text" class="form-control" id="url" placeholder="www.ytb.com/12">
                    </div>
                </div>
                <div id="inputFile">
                    <div class="form-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                </div>
                <div class="container pr-0 mx-0">
                    <div class="text-right mx-0 pr-0">
                        <button type="submit" class="btn btn-outline-primary btn-md ">Enviar</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <!-- Pager -->


    <!-- Footer -->
    <footer>
        <div class="container ">
            <div class="row ">
                <div class="col-lg-8 col-md-10 mx-auto ">
                    <p class="copyright text-muted ">Copyright &copy; goRush</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js "></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js "></script>

    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js "></script>

    <script>
        $('#customRadioInline1').click(function() {
            $('#inputFile').show();
            $('#inputVideo').hide();
        })
        $('#customRadioInline2').click(function() {
            $('#inputFile').hide();
            $('#inputVideo').show();
        })
    </script>
</body>